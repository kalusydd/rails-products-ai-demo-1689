<div id="<%= dom_id product %>">
  <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill if product.photo.attached? %>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Material:</strong>
    <%= product.material %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>

  <p>
    <strong>In stock:</strong>
    <%= product.available_quantity %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

</div>
